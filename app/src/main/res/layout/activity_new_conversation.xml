<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_horizontal_margin_half"
    android:layout_marginRight="@dimen/activity_horizontal_margin_half"
    android:layout_marginTop="@dimen/activity_vertical_margin_half"
    android:background="@drawable/background_topics"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ui.conversations.NewConversationActivity">

    <ImageView
        android:id="@+id/newConversationActivity_imageView_nospeak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_chat" />

    <ImageView
        android:id="@+id/newConversationActivity_imageView_speak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_topics"
        android:src="@drawable/ic_action_mic"
        android:visibility="gone" />

    <EditText
        android:id="@+id/newConversationActivity_editText_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:hint="@string/compose_topic"
        android:inputType="textMultiLine">

        <requestFocus />
    </EditText>

    <ImageView
        android:id="@+id/newConversationActivity_imageView_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_topics"
        android:src="@drawable/ic_action_send_now" />

</LinearLayout>